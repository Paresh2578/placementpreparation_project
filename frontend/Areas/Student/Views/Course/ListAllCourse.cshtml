@model List<CourseModel>

@{
    ViewData["Title"] = "All Courses";

    List<CourseModel> courses = Model;
        
}

<!-- Page Title -->
<div class="page-title light-background">
    <div class="container">
        <h1>All Courses</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-controller="Home" asp-action="Home">Home</a></li>
                <li class="current">Courses</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->

<!-- Courses Section -->
<section id="courses-section" class="container courses-section section">
    <div class="search-bar-container">
        <!-- Input field for search -->
        <input type="text" id="course-search-input" class="search-input" placeholder="Search courses...">

        <!-- Dropdown filters -->
        <div class="filter-container">
            <select asp-items="@ViewBag.BranchList as List<SelectListItem>" id="branch" class="filter-dropdown">
                <option value="">All Branchs</option>
            </select>
            <select asp-items="@ViewBag.CourseTypeList as List<SelectListItem>" id="courseType" class="filter-dropdown">
                <option value="">All Course Types</option>
            </select>
        </div>

        <!-- Search Button -->
        <button  onclick="handleSearch()" class="search-button">Search</button>
    </div>

    <!-- List of Courses -->
    <div class="course-list">
        <div class="row gy-4">
            @foreach (var course in courses)
            {
                <a asp-action="CourseDetail" asp-controller="Course" asp-route-courseId="@course.CourseId" class=" col-lg-3 col-md-6 d-flex align-items-stretch course-item" data-aos="fade-up" data-aos-delay="100" data-name="@course.CourseName">
                    <div class="course-card">
                        <div class="card-img">
                            <img src="@course.Img" class="img-fluid" alt="@course.CourseName" style="width: 100%; height: 100%; object-fit: cover;">
                        </div>
                        <div class="card-content">
                            <div class="d-flex justify-content-between">
                                <span class="type">@course.CourseType.CourseTypeName</span>
                            </div>
                            <h4 class="name">@course.CourseName</h4>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>

<!-- jQuery Script -->
@* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
@section Scripts{
<script>
    $(document).ready(function () {
        $('#course-search-input').on("keyup", function () {
            var searchValue = $(this).val().toLowerCase().trim();

            console.log("Search input:", searchValue); // Debugging

            // All course
            var courses = document.querySelectorAll(".course-item");
            for (let course of courses) {
                var courseName = course.getAttribute("data-name").toLowerCase().trim();
                console.log("Course Name:", courseName); // Debugging
                console.log("Course:", course); // Debugging
                course.style.display = "none";
                if (courseName.includes(searchValue)) {
                    course.style.display = "block";
                } else {
                    course.style.display = "none";
                }
            }

          

            @* // Check the number of visible courses
            var visibleCourses = $(".course-item:visible").length;

            // Remove existing "No Courses Found" message if it exists
            $(".no-courses-found").remove();

            // If no courses are visible, add the "No Courses Found" message
            if (visibleCourses === 0) {
                $(".course-list .row").append(`
                    <div class="col-12 no-courses-found">
                        <p class="text-center text-muted">No Courses Found</p>
                    </div>
                `);
            } *@
        });
    });
</script>

 <!-- DropDown Search -->
 <script>
    function handleSearch() {
        var branchId = $("#branch").val();
        var courseTypeId = $("#courseType").val();

        $.ajax({
            url: "/Course/GetCoursesByBranchAndCourseType",
            type: "GET",
                data: { branchId: branchId, courseTypeId: courseTypeId },
            success: function (response) {
                console.log(response);
                $("#course-list .row").empty();
                    // Append each course dynamically
                    response.forEach(course => {
                        $("#course-list .row").append(`
                        <a href="/Course/CourseDetail/${course.CourseId}" class="col-lg-3 col-md-6 d-flex align-items-stretch course-item" data-aos="fade-up" data-aos-delay="100" data-name="${course.CourseName}">
                            <div class="course-card">
                                <div class="card-img">
                                    <img src="${course.Img}" class="img-fluid" alt="${course.CourseName}" style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                                <div class="card-content">
                                    <div class="d-flex justify-content-between">
                                                @* <span class="type">${course.CourseType.courseTypeName}</span> *@
                                    </div>
                                    <h4 class="name">${course.CourseName}</h4>
                                </div>
                            </div>
                        </a>
                    `);
                    });
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
 </script>
}
