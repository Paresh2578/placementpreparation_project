@model List<CourseModel>


<!-- Page Title -->
<div class="page-title light-background">
    <div class="container">
        <h1>All Courses</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-controller="Home" asp-action="Home">Home</a></li>
                <li class="current">Courses</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<!-- Starter Section Section -->

<!-- Courses  Section -->
<section id="courses-section " class=" container courses-section section">
    <div class="search-bar-container">
        <!-- Input field for search -->
        <input type="text" class="search-input" placeholder="Search courses...">

        <!-- Dropdown filters -->
        <div class="filter-container">
            <select class="filter-dropdown">
                <option>All Branches</option>
                <option>Science</option>
                <option>Arts</option>
                <option>Commerce</option>
            </select>
            <select class="filter-dropdown">
                <option>All Course Types</option>
                <option>Online</option>
                <option>Offline</option>
            </select>
            <select class="filter-dropdown">
                <option>All Difficulty Levels</option>
                <option>Beginner</option>
                <option>Intermediate</option>
                <option>Advanced</option>
            </select>
        </div>

        <!-- Search Button -->
        <button class="search-button">Search</button>
    </div>

    <!-- List  Courses -->
       <div class="">
        <div class="row gy-4">
            @foreach(CourseModel course in Model){
                 <!--course 1-->
                <a asp-action="CourseDetail" asp-controller="Course" class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="course-card" >
                        <div class="card-img">
                            <img src="@course.Img" class="img-fluid" alt="Walter White" style="width: 100%; height: 100%; object-fit: cover;">
                        </div>
                        <div class="card-content">
                            <div class="d-flex justify-content-between">
                                <span class="type">@course.CourseType.CourseTypeName</span>
                            </div>
                            <h4 class="name">@course.CourseName</h4>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>
