@model SignInModel


    <div class="flex flex-col items-center justify-center h-screen p-3" style="background: linear-gradient(90deg, #3a77d9, #a785c6);">
    @* <div class="flex flex-col items-center justify-center h-screen p-3" style="background:  linear-gradient(to right, #10b981, #3b82f6);"> *@
        <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
            <h1 class="text-3xl block text-center font-semibold">Login</h1>
            <hr class="mt-3 mb-4">
            <form asp-action="SignIn" method="post" class="flex flex-col">
                <div class="mb-2">
                    <div class="flex">
                        <span class="text-red-600">*</span><label asp-for="Email" class="text-gray-700 mb-1"></label>
                    </div>
                    <input asp-for="Email" placeholder="Enter Email" class="w-full bg-gray-100 text-gray-900 border-0 rounded-md p-2  focus:bg-gray-200 focus:outline-none focus:ring-1 focus:ring-blue-500 transition ease-in-out duration-150" placeholder="Email address">
                    <span asp-validation-for="Email" class="text-red-600"></span>
                </div>
                <div class="mb-2">
                    <div class="flex">
                       <span class="text-red-600">*</span> <label asp-for="Password" class="text-gray-700 mb-1"></label>
                    </div>
                    <input asp-for="Password" placeholder="Enter Password" class="w-full bg-gray-100 text-gray-900 border-0 rounded-md p-2  focus:bg-gray-200 focus:outline-none focus:ring-1 focus:ring-blue-500 transition ease-in-out duration-150" placeholder="Email address">
                    <span asp-validation-for="Password" class="text-red-600"></span>
                </div>
                @* <div class="flex items-center justify-between flex-wrap">
                    <label for="remember-me" class="text-sm text-gray-900 cursor-pointer">
                        <input type="checkbox" id="remember-me" class="mr-2">
                        Remember me
                    </label>
                    <a href="#" class="text-sm text-blue-500 hover:underline mb-0.5">Forgot password?</a>
                </div> *@
                <button type="submit" class="bg-gradient-to-r from-indigo-500 to-blue-500 text-white font-bold py-2 px-4 rounded-md mt-4 hover:bg-indigo-600 hover:to-blue-600 transition ease-in-out duration-150">Login</button>
            </form>
        </div>
    </div>
